generator client {
  provider = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Toadz {
  toadId   Int @id
  toadName String @default("")
  user  User? @relation(fields:[userId], references: [address])
  userId  String?
  vibing    Boolean @default(false)
  level     Int @default(0)
  xp        Int @default(0)
  overall   Int @default(10)
  fed       Int @default(10)
  energy    Int @default(10)
  happiness Int @default(10)
  health    Int @default(10)
  spirit    Int @default(10)
  state     String @default("")
}

model User {
  address String @id
  token String?
  toadz Toadz[]
}
